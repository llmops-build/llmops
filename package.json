{
  "name": "llmops-monorepo",
  "version": "1.0.0",
  "description": "A pluggable LLMOps toolkit for TypeScript teams",
  "private": true,
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/llmops-build/llmops.git"
  },
  "homepage": "https://llmops.build",
  "bugs": {
    "url": "https://github.com/llmops-build/llmops/issues"
  },
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 run build",
    "build:all": "pnpm -r run build",
    "dev": "pnpm -r --parallel run dev",
    "dev:packages": "pnpm --filter './packages/*' --parallel run dev",
    "test": "pnpm -r run test",
    "typecheck": "pnpm -r run typecheck",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "pnpm -r run clean",
    "release": "bumpp"
  },
  "keywords": [
    "llmops",
    "ai",
    "llm",
    "typescript",
    "openai"
  ],
  "author": "chtushar",
  "license": "Apache-2.0",
  "packageManager": "pnpm@10.24.0",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/node": "^24.10.4",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "bumpp": "^10.3.2",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^16.5.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.7.4",
    "tinyglobby": "^0.2.15",
    "tsdown": "0.17.0-beta.5",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "dependencies": {
    "zod": "^4.3.5"
  }
}
